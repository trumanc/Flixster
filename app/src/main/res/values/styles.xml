<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="movie_row_style" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>

    <style name="movie_row_title_style" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="movie_row_overview_style" parent="AppTheme">
    </style>

    <style name="movie_detail_title_style" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="movie_row_image_style" parent="AppTheme">
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="movie_detail_scroll_view_style" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>



</resources>
